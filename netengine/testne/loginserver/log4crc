<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">

<log4c version="1.2.1">

	<config>
		<bufsize>0</bufsize>
		<debug level="2"/>
		<nocleanup>0</nocleanup>
		<reread>0</reread>
	</config>

	<category name="loginserver" priority="debug" appender="loginserver.log" />
	<appender name="loginserver.log" type="rollingfile" logdir="./log/" prefix="loginserver.log" layout="dated" rollingpolicy="myrollingpolicy" />
	<rollingpolicy name="myrollingpolicy" type="sizewin" maxsize="102400" maxnum="100" />

